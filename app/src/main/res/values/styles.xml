<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="login_and_register_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>
    <style name="button_secondary_color" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">@color/light_blue_400</item>
    </style>
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MyTextViewStyleLight" parent="MyTextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:height">5dp</item>
    </style>
    <style name="MyBottomNavBarBackground">
        <item name="android:background">@color/gray_200</item>
    </style>
    <style name="MyBottomNavBarIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="MyBottomNavBarIconsColor" parent="MyBottomNavBarIcons">
        <item name="android:tint">@color/gray_600</item>
    </style>
</resources>